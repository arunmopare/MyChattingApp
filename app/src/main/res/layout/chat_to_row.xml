<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".messeges.LatestMessegesActivity">

    <TextView
            android:id="@+id/text_view_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="68dp"

            android:background="@drawable/background_button"
            android:maxWidth="240dp"
            android:padding="8dp"
            android:text="This is my message that will be on on on hbhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhon"
            app:layout_constraintBottom_toBottomOf="@+id/image_view_chat_to_row"
            app:layout_constraintEnd_toStartOf="@+id/image_view_chat_to_row"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_view_chat_to_row" />

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view_chat_to_row"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/black"
            app:srcCompat="@android:drawable/btn_star_big_on" />

</androidx.constraintlayout.widget.ConstraintLayout>